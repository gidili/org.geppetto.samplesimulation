<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:context="http://www.springframework.org/schema/context"		
		xsi:schemaLocation="http://www.springframework.org/schema/beans
							http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
							http://www.springframework.org/schema/context
							http://www.springframework.org/schema/context/spring-context-2.5.xsd">
	
	<!-- Scans the impl package for module @Components to install and configure -->
	<context:component-scan base-package="org.openworm.simulationengine.samplesimulation" />
	
	<bean id="config" class="org.openworm.simulationengine.samplesimulation.SimulationConfig">
        <property name="elemCount" value="30" />
        <property name="steps" value="100" />
        <property name="dt" value="0.01" />
        <property name="samplingPeriod" value="1" />
        <property name="v" value="-10" />
        <property name="xm" value="0" />
        <property name="xn" value="0" />
        <property name="xh" value="0" />
    </bean>
    
</beans>
